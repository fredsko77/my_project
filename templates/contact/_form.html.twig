

<form action="/api_contact" onsubmit="handleContact(this, event);" method="POST">
    <h3>Formulaire de contact</h3>
    <div class="form-group">
        <label for="name">Nom</label>
        <input type="text" name="name" id="name" class="form-control" value="Marie Dupont" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="form-control" value="marie@dupont.fr" required>
    </div>
    <div class="form-group">
        <label for="object">Object</label>
        <input type="text" name="object" id="object" class="form-control" value="Proposition professionnelle" required>
    </div>
    <div class="form-group">
        <label for="message">Message</label>
        <textarea name="message" id="message" class="form-control" rows="10" required>Nous recherchons un developpeur ayant vos comp√©tences pour un projet de 24 mois.</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Envoyer</button>
</form>


