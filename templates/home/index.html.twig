{% block stylesheets %}
    <script>        
        const loading = () => {
            let load = document.getElementById('load');
            let loader = `<div class="lds-ring"><div></div><div></div><div></div><div></div></div>`;
            load.classList.remove('hidden');
            load.innerHTML = loader;
            setTimeout(() => {
                load.innerHTML = '';                
                load.classList.add('hidden');
            }, 2100);
        };
    </script>
{% endblock %}

