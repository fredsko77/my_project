{% extends 'layouts/layout.html.twig' %}

{% block stylesheets %}
    <script>        
        const loading = () => {
            let load = document.getElementById('load');
            let loader = `<div class="lds-ring"><div></div><div></div><div></div><div></div></div>`;
            load.classList.remove('hidden');
            load.innerHTML = loader;
            setTimeout(() => {
                load.innerHTML = '';                
                load.classList.add('hidden');
            }, 2100);
        };
    </script>
{% endblock %}

{% block masthead %}

    <div class="banner" id="home">
        <h3 class="banner-name">Frédérick AGATHE</h3>
        <h1 class="banner-title">Développeur d'application PHP/Symfony</h1>
        <div class="group-button">
            <a href="#about" class="banner-btn">En savoir plus</a>
        </div>
    </div>
    
{% endblock %}

