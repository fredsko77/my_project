

<form action="/api_contact" onsubmit="handleContact(this, event);" method="POST">
    <h3>Formulaire de contact</h3>
    <div class="form-group">
        <label for="name">Nom</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Ex: John Doe" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="Ex: jdoe@mail.de" required>
    </div>
    <div class="form-group">
        <label for="object">Object</label>
        <input type="text" name="object" id="object" class="form-control" placeholder="Ex: Proposition d'emploi" required>
    </div>
    <div class="form-group">
        <label for="message">Message</label>
        <textarea name="message" id="message" class="form-control" rows="10" required>Bonjour monsieur AGATHE,
        </textarea>
    </div>
    <button type="submit" class="btn btn-primary">Envoyer</button>
</form>


