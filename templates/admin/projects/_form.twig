<form action="{{ action }}" method="post" onsubmit="{{ handler }}(this, event)" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Nom</label>
        <input type="text" class="form-control" name="name" id="name" aria-describedby="helpId" placeholder="">
    </div>
    <div class="form-group">
        <label for="link">Lien</label>
        <input type="text" class="form-control" name="link" id="link" aria-describedby="helpId" placeholder="">
    </div>
    <div class="form-group">
        <label for="status">Statut</label>
        <select class="custom-select" name="status" id="status">
			<option value="pending">En cours</option>
			<option value="completed">Terminé</option>
		</select>
    </div>
    <div class="form-group">
        <label for="details">Description</label>
        <textarea class="form-control" name="details" id="details" rows="3"></textarea>
    </div>
    <div class="tasks">
        <label for="">Mes Tâches <i class="icofont-plus ml-1 cursor-pointer" title="Ajouter une tache" onclick="addTask()"></i></label>
        <div class="form-group col-12" id="task-group">
            <div class="row task align-items-baseline mb-1" data-task="1">
                <input id="mes_taches_1" class="form-control col-11" type="text" name="tasks[]">
                <span class="col-1">
					<i class="icofont-close cursor-pointer font-weight-bold" title="Supprimer cette tâche" onclick="deleteTask(1)"></i>
				</span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <img class="hidden" src="" alt="Image du projet" srcset="" id="uploadedFile">
        <input type="file" name="image" id="image" class="hidden" onchange="streamImage(this, event)">
    </div>
    <label class="text-underline cursor-pointer" for="image"> <i class="icofont-plus"></i> Ajouter une image</label>
    <p id="uploadError" class="text-danger hidden"></p>
    <h6>Technologies utilisées</h6>
    <div class="technos">
        {% for key, techno in technos %}
        <label class="checkBtn cursor-pointer" for="{{ key }}">{{ techno }}</label>
        <input class="projectTechnos" type="checkbox" name="techno[]" id="{{ key }}" value="{{ key }}"> {% endfor %}
    </div>
    <button type="submit" class="btn btn-primary">Envoyer</button>
</form>