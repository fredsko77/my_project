{% extends "layouts/app.twig" %}

{% block content %}

	<div class="container">
		<div class="alert alert-danger hidden mb-3" id="alert">
			<ul class="errors"></ul>
		</div>
		<form action="/api/login" method="post" id="auth-form" onsubmit="handleRequest(this, event)">
			<h1 class="text-center">Connexion</h1>
			<div class="form-group">
				<label for="email">Adresse email</label>
				<input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelpId" placeholder="">
				<small id="emailHelpId" class="form-text text-muted">Help text</small>
			</div>
			<div class="form-group">
				<label for="password">Mot de passe</label>
				<input type="password" class="form-control" name="password" id="password" placeholder="" autocomplete="off">
			</div>
			<button type="submit" class="btn btn-primary">Envoyer</button>
		</form>
	</div>

{% endblock %}

{% block javascripts %}
	<script src="./js/auth.js"></script>
{% endblock %}